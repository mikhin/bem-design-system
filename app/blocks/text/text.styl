.text
	line-height var(--line-height)

	&_align
		&_center
			text-align center

	&_size
		&_s
			--text-height var(--text_height_s)
			--line-height var(--text_line_height_s)
			--word-width-s 20px
			--word-width-m 48px
			--word-width-l 100px

		&_m
			--text-height var(--text_height_m)
			--line-height var(--text_line_height_m)
			--word-width-s 24px
			--word-width-m 56px
			--word-width-l 114px

		&_l
			--text-height var(--text_height_l)
			--line-height var(--text_line_height_l)
			--word-width-s 28px
			--word-width-m 68px
			--word-width-l 138px

		&_xl
			--text-height var(--text_height_xl)
			--line-height var(--text_line_height_xl)
			--word-width-s 32px
			--word-width-m 74px
			--word-width-l 154px

		&_xxl
			--text-height var(--text_height_xxl)
			--line-height var(--text_line_height_xxl)
			--word-width-s 36px
			--word-width-m 88px
			--word-width-l 184px

	&_type
		&_h1
			margin 18px 0 24px

		&_h2
			margin 45px 0 21px

		&_h3
			margin 42px 0 0

		&_p
			margin 15px 0 21px

	&_view
		&_primary
			--text_color var(--text_color_primary)

		&_secondary
			--text_color var(--text_color_secondary)

		&_ghost
			--text_color var(--text_color_additional)

		&_link
			--text_color var(--text_color_link)
