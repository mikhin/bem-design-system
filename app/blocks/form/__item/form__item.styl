.form__item
	box-sizing border-box
	flex-direction column

	@media (min-width $tabletWidth)
		flex-direction row

	&:last-child
		margin-bottom 0

	&_border
		&_bottom
			border-bottom 3px solid var(--color_border)

	&_distribute
		&_between
			display flex
			justify-content space-between

	&_vertical-align
		&_center
			display flex
			align-items stretch

			@media (min-width $tabletWidth)
				align-items center

	&_indent-b
		&_xxxs
			margin-bottom var(--space_xxxs)

		&_xxs
			margin-bottom var(--space_xxs)

		&_s
			margin-bottom var(--space_s)

		&_m
			margin-bottom var(--space_m)

		&_l
			margin-bottom var(--space_l)

		&_xl
			margin-bottom var(--space_xl)

		&_xxl
			margin-bottom var(--space_xxl)

		&_xxxl
			margin-bottom var(--space_xxxl)

		&_xxxxl
			margin-bottom var(--space_xxxxl)

	&_space-h
		&_xxxs
			padding-left var(--space_xxxs)
			padding-right var(--space_xxxs)

		&_xxs
			padding-left var(--space_xxs)
			padding-right var(--space_xxs)

		&_s
			padding-left var(--space_s)
			padding-right var(--space_s)

		&_m
			padding-left var(--space_m)
			padding-right var(--space_m)

		&_l
			padding-left var(--space_l)
			padding-right var(--space_l)

		&_xl
			padding-left var(--space_xl)
			padding-right var(--space_xl)

		&_xxl
			padding-left var(--space_xxl)
			padding-right var(--space_xxl)

		&_xxxl
